<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="6.0" ExtensionBundleId="com.qmasingarbe.PymiereLink" ExtensionBundleVersion="11.1" ExtensionBundleName="Pymiere Link" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="com.qmasingarbe.PymiereLink" Version="1.0.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PPRO" Version="9.0" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="6.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.qmasingarbe.PymiereLink">
			<DispatchInfo >
				<Resources>
					<MainPath>./index.html</MainPath>
					<ScriptPath>./ppro_script.jsx</ScriptPath>
					<CEFCommandLine>
						<Parameter>--allow-file-access</Parameter>
						<Parameter>--allow-file-access-from-files</Parameter>
						<Parameter>--enable-nodejs</Parameter>
						<Parameter>--mixed-context</Parameter>
						<Parameter>--allow-insecure-localhost</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>false</AutoVisible>
					<StartOn>
						<!-- PPro dispatches this event on startup -->
						<Event>com.adobe.csxs.events.ApplicationActivate</Event>
                    </StartOn>
				</Lifecycle>
				<UI>
					<Type>Custom</Type>
					<Menu>Pymiere Link</Menu>
					<Geometry>
						<Size>
							<Height>300</Height>
							<Width>180</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
